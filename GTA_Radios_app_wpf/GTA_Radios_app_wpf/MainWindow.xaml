<Window x:Class="GTA_Radios_app_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GTA_Radios_app_wpf"
        mc:Ignorable="d"
        Title="Radio stations of the games of Grand Theft Auto series"  MinHeight="450" MinWidth="800" Height="720" Width="1280">

    <Grid Background="#091d3d">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!--grid 0-0-->
        <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5" TextWrapping="Wrap" Foreground="LightGreen"  FontFamily="Verdana" Text="Welcome to application &quot;Radio stations of the games of Grand Theft Auto series&quot;. Choose a game, then a station or search station or a track." Grid.Column="0" Grid.Row="0">
        </TextBlock>

        <!--grid 0-1-->
        <ListBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5" Grid.Column="0" Grid.Row="1"/>
        
        
        <!--grid 0-2-->
        <TextBlock Foreground="Gray" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Stretch" Margin="5,5,5,5" TextWrapping="Wrap" VerticalAlignment="Bottom">
            Application made by
                <Span FontStyle="Italic">
                    Leszczyński Konrad
                </Span> 
        </TextBlock>
        
        <!--grid 1-0-->
        <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,50,5" TextWrapping="Wrap" FontFamily="Lucida Console" Grid.Column="1" Grid.Row="0" RenderTransformOrigin="-0.2,1.736"/>
        <Button Grid.Column="1" Grid.Row="0" Width="40" Height="40" Margin="0,0,5,0" HorizontalAlignment="Right">&#128269;</Button>

        <!--grid 1-1-->
           <Image />
        
        <!--grid 1-2-->
        <Button Grid.Column="1" Grid.Row="2" Width="40" Height="40" HorizontalAlignment="Right" Margin="0,0,5,0" >&#10006;</Button>
        <Button Grid.Column="1" Grid.Row="2" Width="40" Height="40" HorizontalAlignment="Right" Margin="0,0,50,0">&#x2630;</Button>
        <Button Grid.Column="1" Grid.Row="2" Width="40" Height="40" HorizontalAlignment="Right" Margin="0,0,95,0">&#x21A9;</Button>
        





        <!--Inne-->
        <!--
        <Border Grid.Column="0" Grid.Row="0" BorderThickness="0 0 2 0" BorderBrush="LightGray"></Border>
        <Border Grid.Column="0" Grid.Row="1" BorderThickness="0 0 0 0" BorderBrush="LightGray"></Border>
        <Border Grid.Column="0" Grid.Row="2" BorderThickness="0 0 0 0" BorderBrush="LightGray"></Border>
        <Border Grid.Column="1" Grid.Row="0" BorderThickness="0 0 0 0" BorderBrush="LightGray"></Border>
        <Border Grid.Column="1" Grid.Row="1" BorderThickness="0 0 4 0" BorderBrush="LightGray"></Border>
        <Border Grid.Column="1" Grid.Row="2" BorderThickness="0 0 0 0 " BorderBrush="Purple"></Border>
        -->
                     
    </Grid>
</Window>
